# Environment Configuration
NODE_ENV=development
PORT=5000

# Supabase Configuration
SUPABASE_URL=your-supabase-project-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d

# Concordium Configuration
CONCORDIUM_NODE_URL=https://testnet.concordium.com
CONCORDIUM_TESTNET_URL=https://testnet.concordium.com
CONCORDIUM_MAINNET_URL=https://mainnet.concordium.com

# API Configuration
API_VERSION=v1
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Location Verification
LOCATION_ACCURACY_THRESHOLD=10
DEFAULT_RADIUS_METERS=100
MAX_RADIUS_METERS=1000

# Escrow Configuration
ESCROW_CONTRACT_ADDRESS=your-escrow-contract-address
PLT_TOKEN_CONTRACT_ADDRESS=your-plt-token-contract-address
